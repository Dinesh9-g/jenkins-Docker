pipeline {
    agent any
    environment {
        IMG_NAME = 'my-gd'
        DOCKER_REPO = 'gdrajasree/rajasree6-images'
    }
    stages {
        stage('Verify Structure') {
            steps {
                script {
                    sh '''
                        echo "=== Current Structure ==="
                        ls -R src/
                        echo "=== HTML Files ==="
                        ls -l src/html/
                    '''
                }
            }
        }
        stage('build') {
            steps {
                script {
                    dir('src') {
                        sh 'docker build -t ${IMG_NAME} .'
                        sh 'docker tag ${IMG_NAME} ${DOCKER_REPO}:${IMG_NAME}'
                    }
                }
            }
        }
        stage('push') {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: 'DockerHub-gd',
                    passwordVariable: 'PSWD',
                    usernameVariable: 'LOGIN'
                )]) {
                    script {
                        sh 'echo ${PSWD} | docker login -u ${LOGIN} --password-stdin'
                        sh 'docker push ${DOCKER_REPO}:${IMG_NAME}'
                    }
                }
            }
        }
    }
}
